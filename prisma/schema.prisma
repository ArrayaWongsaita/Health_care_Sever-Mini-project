generator client {
  provider = "prisma-client"
  output   = "../src/infrastructure/db/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  DOCTOR
  PATIENT
}

model User {
  id        String   @id @default(uuid())
  username  String   @unique
  password  String   @db.VarChar(100)
  role      Role     @default(PATIENT)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  doctorNotes DoctorNote[] @relation("DoctorNotesAsDoctor")

  patientNotes DoctorNote[] @relation("DoctorNotesAsPatient")

  healthRecords HealthRecord[]
}

model DoctorNote {
  id        String   @id @default(uuid())
  note      String   @db.VarChar(1000)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  doctorId  String
  doctor    User   @relation("DoctorNotesAsDoctor", fields: [doctorId], references: [id])
  patientId String
  patient   User   @relation("DoctorNotesAsPatient", fields: [patientId], references: [id])
}

model HealthRecord {
  id    String  @id @default(uuid())
  type  String
  value String?
  unit  String?
  note  String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user   User   @relation(fields: [userId], references: [id])
  userId String

  @@unique([userId, id])
}
